import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)
import java.awt.Color;
/**
 * Write a description of class FuelCounterText here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class FuelCounterText extends Actor
{
    /**
     * Act - do whatever the FuelCounterText wants to do. This method is called whenever
     * the 'Act' or 'Run' button gets pressed in the environment.
     */
    public void act() 
    {
        GreenfootImage img = new GreenfootImage("Fuel left: ", 48, Color.BLACK, Color.LIGHT_GRAY); 
        setImage(img);// create title image
    }    
}
