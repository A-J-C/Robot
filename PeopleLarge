import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Write a description of class PeopleButton3 here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class PeopleLarge extends PeopleCounter
{
    /**
     * Act - do whatever the PeopleButton3 wants to do. This method is called whenever
     * the 'Act' or 'Run' button gets pressed in the environment.
     */
    public void act() 
    {
         if(Greenfoot.mouseClicked(this)){carryMax=3;setImage("Large2.png");}
         if(carryMax!=3){setImage("Large1.png");}
    }    
}
