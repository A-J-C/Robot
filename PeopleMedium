import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Write a description of class PeopleButton2 here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class PeopleMedium extends PeopleCounter
{
    /**
     * Act - do whatever the PeopleButton2 wants to do. This method is called whenever
     * the 'Act' or 'Run' button gets pressed in the environment.
     */
    public void act() 
    {
         if(Greenfoot.mouseClicked(this)){carryMax=2;setImage("Medium2.png");}
          if(carryMax!=2){setImage("Medium1.png");}
    }    
}
