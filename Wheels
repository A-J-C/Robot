import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Write a description of class Wheels here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class Wheels extends Track
{
    /**
     * Act - do whatever the Wheels wants to do. This method is called whenever
     * the 'Act' or 'Run' button gets pressed in the environment.
     */
    public void act() 
    {
        if(Greenfoot.mouseClicked(this)){type="Wheels";setImage("Wheels2.png");}
        if(type!="Wheels"){setImage("Wheels1.png");}
    }    
}
